
@{
    Layout = null;
    ViewBag.Title = "Alterar senha";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Denner Evaldt Machado.">
    <title>@ViewBag.Title</title>

    <!-- Favicon -->
    <link rel="icon" href="@Url.Content("~/Content/images/favicon.png")" />

    <!-- Css -->
    @Styles.Render("~/Content/css")

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/4.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1..2/respond.min.js"></script>
    <![endif]-->

</head>
<body ng-app="changeKeyModule">
    <div class="container margin-top-40">
        <div class="col-md-offset-2 col-md-4" style="border-right: 1px solid #cccccc;">
            <div class="pull-left">
                <img class="img-logo" src="@Url.Content("~/Content/images/logo-portal.png")" alt="Logo">
            </div>
        </div>
        <div class="col-md-6">
            <p style="font-size:25px; font-weight: 200;">Alterar senha </p>
        </div>

        <div class="col-md-12 margin-bottom-40">
            <div class="col-md-offset-3 col-md-6 margin-top-40">
                
                <form id="formChangeKeyConfirm" name="formChangeKeyConfirm" method="post" ng-controller="ChangeKeyConfirmController" ng-submit="submit(formChangeKeyConfirm)">

                    <input type="hidden" id="inputEmail" name="inputEmail" ng-model="Account.email" value="@ViewBag.email" ng-init="Account.email='@ViewBag.email'" />

                    <div class="form-group" ng-class="{ 'has-error has-feedback': formChangeKeyConfirm.inputPassword.$dirty && formChangeKeyConfirm.inputPassword.$error.required }">
                        <label for="inputPassword">Nova senha</label>
                        <input type="password" class="form-control" name="inputPassword" ng-model="Account.password" placeholder="Senha" ng-minlength="6" required />
                        <p class="bg-danger" ng-show="formChangeKeyConfirm.inputPassword.$error.minlength">
                            A senha deve conter no mínimo 6 caracteres.
                        </p>
                    </div>

                    <button type="submit" class="btn btn-success btn-block" ng-disabled="submitButton">Alterar senha</button>

                    <div class="text-center">
                        <img class="img-loading" src="@Url.Content("~/Content/images/loader.gif")" alt="Loading" ng-show="loading" />
                    </div>

                    <div ng-class="result">{{ resultMessage }}</div>

                </form>

            </div>
        </div>

    </div>

    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>

    <!-- Plugins -->
    @Scripts.Render("~/bundles/bootstrap")

    <!-- Angular JS-->
    @Scripts.Render("~/Scripts/angular.js")
    @Scripts.Render("~/Scripts/app.js")
    @Scripts.Render("~/Scripts/controllers.js")
</body>
</html>


