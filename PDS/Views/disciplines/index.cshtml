
@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/_LayoutDisciplines.cshtml";
}

<div class="container-fluid" ng-controller="DisciplinesController">
    <div class="col-md-12">
        <!--row-->
        <div class="row" style="margin-top: 30px;">

            <div class="col-md-8">
                <div class="panel panel-default">
                    <div class="panel-heading"><h4>Disciplinas</h4></div>

                    <div class="panel-body">

                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr class="active">
                                        <td>#</td>
                                        <td>Disciplina</td>
                                        <td>Ver</td>
                                    </tr>
                                </thead>

                                <tbody>
                                    <tr ng-repeat="disc in disciplinas | orderBy:'idDiscipline'">
                                        <td>{{disc.idDiscipline}}</td>
                                        <td>{{disc.name}}</td>
                                        <td><a class="btn-sm btn-primary" href="#" ng-click="seeClasse(disc.idDiscipline)"><span class="glyphicon glyphicon-cog"></span></a></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="panel panel-default" style="padding-top: 150px;">
                    <div class="panel-body">
                        <img class="img-logo" src="@Url.Content("~/Content/images/logo-portal.png")" alt="Logo" style="width: 80%;">
                    </div>
                </div>

                <a href="#" data-toggle="modal" data-target=".create-discipline" class="btn btn-block btn-primary"><span class="glyphicon glyphicon-book"></span> Nova Disciplina</a>
                <a href="#" data-toggle="modal" data-target=".edit-discipline" class="btn btn-block btn-primary"><span class="glyphicon glyphicon-pencil"></span> Editar Disciplina</a>
            </div>

        </div>
        <!--/row-->
    </div>
</div>


